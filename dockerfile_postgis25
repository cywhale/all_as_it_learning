# COPY script file from https://github.com/postgis/docker-postgis
# init-user-db.sh see ref: https://hub.docker.com/_/postgres
# Rename to Dockerfile and then docker build --network host -t YOUR_TAG_for_this_image ./ 
FROM postgres:latest

LABEL maintainer="PostGIS Project - https://postgis.net"

ENV POSTGIS_MAJOR 2.5
ENV POSTGIS_VERSION 2.5.3+dfsg-3.pgdg100+1

RUN apt-get update \
      && apt-get install -y curl nano net-tools \
      && apt-cache showpkg postgresql-$PG_MAJOR-postgis-$POSTGIS_MAJOR \
      && apt-get install -y --no-install-recommends \
           postgresql-$PG_MAJOR-postgis-$POSTGIS_MAJOR=$POSTGIS_VERSION \
           postgresql-$PG_MAJOR-postgis-$POSTGIS_MAJOR-scripts=$POSTGIS_VERSION \
      && rm -rf /var/lib/apt/lists/* 

RUN mkdir -p /docker-entrypoint-initdb.d
COPY ./initdb-postgis.sh /docker-entrypoint-initdb.d/postgis.sh
COPY ./update-postgis.sh /usr/local/bin
COPY ./init-user-db.sh /docker-entrypoint-initdb.d/init-user-db.sh
